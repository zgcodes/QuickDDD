@model Quick.Application.Admin.UserDto

<div class="page-content padding-top-30">

    <form id="uiform" method="post">
        <input type="hidden" value="@Model.Id" name="Id"/>
        <div class="container form-horizontal padding-top-30">
            <div class="form-group">
                <label class="col-sm-2 control-label">用户名：<span class="asterisk">*</span></label>
                <div class="col-sm-10">
                    <input type="text" placeholder="" name="LoginName"  class="form-control input-xlarge"  
                           data-rule-required="true" maxlength="20"  value="@Model.LoginName">
                </div>
            </div>


            <div class="container form-horizontal padding-top-30">
                <div class="form-group">
                    <label class="col-sm-2 control-label">邮箱：<span class="asterisk">*</span></label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="" name="Email"  class="form-control input-xlarge"  
                           data-rule-required="true" maxlength="20" value="@Model.Email">
                    </div>
                </div>
            </div>


            <div class="container form-horizontal padding-top-30">
                <div class="form-group">
                    <label class="col-sm-2 control-label">密码：<span class="asterisk">*</span></label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="" name="LoginPwd"  class="form-control input-xlarge"  
                           data-rule-required="true" maxlength="20" value="@Model.LoginPwd">
                    </div>
                </div>
            </div>
        </div>

    </form>
      <div class="wx-form-footer fixed">
                <button id="btn-save" type="submit" class="btn btn-lg btn-primary w100">保存</button>
                <button id="btn-cancel" type="button" class="btn btn-default btn-lg w100">取消</button>
            </div>
</div>

<script type="text/javascript">
    $(function () {

        $("#btn-save").click(function () {
            $.ajax({
                url: "/User/User/@ViewBag.ActionName" ,
                type: "Post",
                data: $("#uiform").serialize(),
                dataType: "json",
                success: function (data) {
                    if (data == 1) {
                        bootbox.alert("操作成功!");
                    }
                }
            });
        });

    });
</script>
